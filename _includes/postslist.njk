<div class="grid grid-cols-1">
  <ol reversed class="space-y-8">
    {% for post in postslist | reverse %}
    <li class="space-y-1">
      <a
        href="{{ post.url | url }}"
        class="text-lg">
        {% if post.data.title %}{{ post.data.title }}{% else %}<code
          >{{ post.url }}</code
        >{% endif %}
      </a>
      {% if post.data.excerpt %}
      <p class="max-w-lg text-gray-600 dark:text-gray-400">
        {{ post.data.excerpt | safe }}
      </p>
      {% endif %}
      <time
        class="block mb-1 text-sm text-gray-600 dark:text-gray-500"
        datetime="{{ post.date | htmlDateString }}">
        {{ post.date | htmlDateString }}
      </time>
    </li>
    {% endfor %}
  </ol>
</div>

