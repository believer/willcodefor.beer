  <ol reversed class="space-y-8">
  {% for post in postslist | reverse %}
    <li>
      <time class="block mb-1 text-sm text-gray-600 dark:text-gray-500" datetime="{{ post.date | htmlDateString }}">
        {{ post.date | htmlDateString }}
      </time>
      <a href="{{ post.url | url }}" class="text-2xl">
        {% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}
      </a>
      <ul class="flex mt-2 space-x-4">
      {% for tag in post.data.tags | noPostTag %}
        {% set tagUrl %}/tags/{{ tag }}/{% endset %}
        <li class="text-sm text-gray-600 dark:text-gray-500">
          <a href="{{ tagUrl | url }}">{{tag}}</a>
        </li>
      {% endfor %}
      </ul>
    </li>
  {% endfor %}
  </ol>
