<ol reversed class="space-y-2 sm:space-y-4" style="counter-reset: section {{ postslist | length + 1 }}">
  {% for post in postslist | reverse %}
    <li class="relative items-baseline grid grid-post gap-4 sm:gap-5 counter-decrement">
      <a href="{{ post.url | url }}">
        {% if post.data.title %}
          {{ post.data.title }}
        {% else %}
          <code>{{ post.url }}</code>
        {% endif %}
      </a>
      <hr class="hidden m-0 border-gray-300 border-dashed sm:block"/>
      <time class="font-mono text-xs text-gray-500 tabular-nums" datetime="{{ post.data.createdDateTime }}">
        <span class="hidden sm:block">
          {{ post.data.createdDateTime }}
        </span>
        <span class="block sm:hidden">
          {{ post.data.created }}
        </span>
      </time>
    </li>
  {% endfor %}
</ol>
