<section class="mt-10">
  <header class="pb-4 mb-4 border-b border-gray-300">
    Latest posts
  </header>

  <ul class="mb-6 grid grid-cols-1 md:grid-cols-2 gap-10">
    {%for post in collections.post | reverse | latestPosts %}
      <li class="list-item">
        <h2 class="mb-2 text-lg font-medium text-gray-800 dark:text-gray-400">
          <a href="{{ post.url | url }}">{{ post.data.title }}</a>
        </h2>
        <div class="mb-2 text-sm text-gray-600 dark:text-gray-400">
          {{ post.date | htmlDateString }}
        </div>
        {{ post.data.excerpt | safe }}
      </li>
    {% endfor %}
  </ul>
</section>

<section class="mt-10">
  <header class="pb-4 mb-4 border-b border-gray-300">
    Experience
  </header>
  <ul class="mb-6 md:w-9/12 space-y-10">
    {%for w in experience %}
      <li class="list-item">
        <h2 class="mb-2 text-lg font-medium text-gray-800 dark:text-gray-400">
          {{ w.name }}
        </h2>
        <div class="mb-2 text-sm text-gray-600 dark:text-gray-400">
          {{ w.position }} ~ {{ w.start }} - {{ w.end }}
        </div>
        {{ w.description | safe }}
        {% if w.link %}
        <a class="inline-block mt-4 text-indigo-600 dark:text-indigo-400" href={{ w.link }}>
          {{ w.linkDescription }}
        </a>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</section>

<section class="mt-10">
  <header class="pb-4 mb-4 border-b border-gray-300">
    Projects
  </header>
  <ul class="space-y-10 md:w-9/12">
    {% for p in projects %}
      <li class="list-item">
        <div class="flex items-center">
          <div class="flex-1 mr-5">
            <h2 class="mb-2 text-lg font-medium text-gray-800 dark:text-gray-400">
              {{p.name}}
            </h2>
            <div class="flex mb-2 space-x-2">
            {% for t in p.tech %}
              <div class="text-xs text-gray-600 dark:text-gray-400">
                {{t}}
              </div>
            {% endfor %}
            </div>
            {{ p.description | safe }}
          </div>
        </div>
        <div class="flex flex-wrap mt-4">
          <a class="text-indigo-600 dark:text-indigo-400" href={{p.link}} aria-label="Source code for {{p.name}} on GitHub">Link</a>
        </div>
      </li>
    {% endfor %}
  </ul>
</section>
