<section class="mt-10 grid md:grid-cols-12 gap-6">
  <header class="text-gray-600 dark:text-gray-400 md:text-right col-span-12 md:col-span-2">
    Latest posts
  </header>

  <ul class="mb-6 grid grid-cols-1 md:grid-cols-2 gap-10 col-span-12 md:col-span-10">
    {%for post in collections.post | reverse | latestPosts %}
      <li class="list-item space-y-2">
        <h2 class="font-medium text-gray-800 dark:text-gray-400">
          <a href="{{ post.url | url }}">{{ post.data.title }}</a>
        </h2>
        <p class="text-sm">
          {{ post.data.excerpt | safe }}
        </p>
        <div class="text-xs text-gray-600 dark:text-gray-400">
          {{ post.date | htmlDateString }}
        </div>
      </li>
    {% endfor %}
  </ul>
</section>

<section class="mt-10 grid md:grid-cols-12 gap-6">
  <header class="text-gray-600 dark:text-gray-400 md:text-right col-span-12 md:col-span-2">
    Work
  </header>
  <div class="space-y-2 col-span-12 md:col-span-10">
  {%for w in experience %}
  <details>
    <summary class="flex items-center mb-2 text-gray-800 cursor-pointer group dark:text-gray-400 space-x-4">
      <span class="flex-none font-medium group-hover:underline group-hover:text-blue-600 dark:group-hover:text-blue-400">
      {{ w.name }}
      </span>
      <span class="flex-shrink w-full border-t border-gray-300 border-dashed dark:border-gray-500"></span>
      <span class="flex-none text-gray-600 dark:text-gray-400">
        {{ w.position }} 
      </span>
      <span class="flex-none font-mono text-sm text-gray-500">
        {{ w.start }}-{{ w.end | safe }}
      </span>
    </summary>
    <div class="mb-8 text-sm">
      {{ w.description | safe }}
      {% if w.link %}
        <a class="inline-block mt-4 text-blue-600 dark:text-blue-400 hover:underline" href={{ w.link }}>
          {{ w.linkDescription }}
        </a>
      {% endif %}
    </div>
  </details>
  {% endfor %}
  </div>
</section>

<section class="mt-10 grid grid-cols-1 md:grid-cols-12 gap-6">
  <header class="text-gray-600 dark:text-gray-400 md:text-right col-span-12 md:col-span-2">
    Selected projects
  </header>
  <div class="space-y-2 col-span-12 md:col-span-10">
    {% for p in projects %}
      <details>
        <summary class="flex items-center mb-2 text-gray-800 cursor-pointer group dark:text-gray-400 space-x-4">
      <span class="flex-none font-medium group-hover:underline group-hover:text-blue-600 dark:group-hover:text-blue-400">
          {{ p.name }}
          </span>
          <span class="flex-shrink w-full border-t border-gray-300 border-dashed dark:border-gray-500"></span>
        </summary>
        <div class="mb-8 text-sm">
          <div class="flex items-center">
            <div class="flex-1 mr-5">
              <div class="flex mb-2 space-x-2">
                {% for t in p.tech %}
                  <div class="text-xs text-gray-600 dark:text-gray-400">
                    {{t}}
                  </div>
                {% endfor %}
              </div>
              {{ p.description | safe }}
            </div>
          </div>
          <div class="flex flex-wrap mt-4">
            <a class="text-blue-600 dark:text-blue-400 hover:underline" href={{p.link}} aria-label="Source code for {{p.name}} on GitHub">Link</a>
          </div>
        </div>
      </details>
    {% endfor %}
  </div>
</section>
{% endblock %}
